.dropdown {
  margin-bottom: 15px;
}

button {
  width: 100%;
  padding: 10px;
  font-size: 16px;
  background-color: #007bff;
  color: white;
  border: none;
  cursor: pointer;
}

button:hover {
  background-color: #0056b3;
}

.dropdown-content {
  display: flex;
  flex-direction: column;
  background-color: #f9f9f9;
  border: 1px solid #ccc;
  padding: 10px;
}

.dropdown-content label {
  margin: 5px 0;
}

input[type="checkbox"] {
  margin-right: 10px;
}
