.tabs {
  display: flex;
  cursor: pointer;
}

.tab {
  padding: 10px 20px;
  border: 1px solid #ddd;
  background: #f2f2f2;
  margin-right: 5px;
  border-radius: 5px 5px 0 0;
}

.tab.active {
  background: #fff;
  border-bottom: none;
  font-weight: bold;
}

.tab-content {
  border: 1px solid #ddd;
  border-radius: 0 0 5px 5px;
  padding: 15px;
  background: #fff;
}
