#pieChartDemo {
  width: 100%;
  height: 100%;
  background-color: #ffffff; // chart container background
}

.panther-chart {
  border: 1px solid #f0f0f0;
  border-radius: 8px;
  padding: 20px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  background-color: #ffffff;
}

.chart-title {
  font-family: Arial, sans-serif;
  color: #4089a9;
  font-size: 16px;
  font-weight: bold;
}

.chart-tooltip {
  background-color: #00395d;
  color: #ffffff;
  font-size: 12px;
}
