.panther-dialog {
  position: absolute; /* Keep it absolute to center it on the screen */
  top: var(--popup-top, 50%);
  left: var(--popup-left, 50%);
  transform: translate(-50%, -50%);
  z-index: 20000; /* Ensure it's above other elements */
  background-color: #fff;
  max-width: 90%; /* Set maximum width */
  max-height: 90%; /* Set maximum height */
  overflow: auto; /* Allow scrolling for overflowing content */
  font-family: Arial, Helvetica, sans-serif;
}
