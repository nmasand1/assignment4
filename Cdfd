<div class="file-list">
    <h2>Generated Files: </h2>
    {% if file_paths %}
        <ul>
            {% for file, path in file_paths %}
                <li><strong>{{ file }}</strong>: <a href="/download/{{ path }}" download>{{ file }}</a></li>
            {% endfor %}
        </ul>
    {% else %}
        <p>No files generated yet.</p>
    {% endif %}
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const jurisdictionSelected = document.getElementById("jurisdiction-selected");
        const jurisdictionDropdown = document.getElementById("jurisdiction-dropdown-list");
        const checkboxes = jurisdictionDropdown.querySelectorAll('input[type="checkbox"]');

        jurisdictionSelected.addEventListener("click", () => {
            jurisdictionDropdown.style.display = jurisdictionDropdown.style.display === "none" ? "block" : "none";
        });

        checkboxes.forEach(checkbox => {
            checkbox.addEventListener("change", () => {
                const selectedValues = [];
                checkboxes.forEach(checkbox => {
                    if (checkbox.checked) {
                        selectedValues.push(checkbox.value);
                    }
                });
                jurisdictionSelected.textContent = selectedValues.length > 0 ? selectedValues.join(', ') : "Select Jurisdictions";
            });
        });
    });
</script>

