    <div id="jurisdiction-dropdown">
        <label for="jurisdiction">Jurisdiction: </label>
        <div class="multiselect-container">
            <div class="multiselect-selected" id="jurisdiction-selected">
                Select Jurisdictions
            </div>
            <div class="multiselect-dropdown" id="jurisdiction-dropdown-list">
                {% for jurisdiction in jurisdictions %}
                    <label>
                        <input type="checkbox" name="jurisdiction" value="{{ jurisdiction }}"> {{ jurisdiction }}
                    </label>
                {% endfor %}
            </div>
        </div>
    </div>

